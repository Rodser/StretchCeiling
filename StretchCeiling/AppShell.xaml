<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StretchCeiling.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StretchCeiling.View.Pages">

    <MenuFlyoutItem Text="Menu" />

    <FlyoutItem  Title="Home" Icon="hamburger.png">
        <ShellContent ContentTemplate="{DataTemplate local:HomePage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Orders" Icon="coffe.png">
        <ShellContent ContentTemplate="{DataTemplate local:ListOrdersPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Components" Icon="hamburger.png">
        <ShellContent ContentTemplate="{DataTemplate local:ListComponentsPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Info" Icon="pizza.png">
        <ShellContent ContentTemplate="{DataTemplate local:InfoPage}"/>
    </FlyoutItem>

</Shell>
