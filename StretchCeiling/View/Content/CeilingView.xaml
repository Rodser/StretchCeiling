<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StretchCeiling.View.Content.CeilingView"
             xmlns:viewmodel="clr-namespace:StretchCeiling.ViewModel"
             x:DataType="viewmodel:CeilingViewModel">
    <VerticalStackLayout>
        <StackLayout>
                            <Polygon Aspect="Uniform"
                                     Margin="30"
                     Points="{Binding Points}"
                     Fill="{StaticResource Gray600}"
                     StrokeThickness="3" 
                     Stroke="{StaticResource Gray600}"/>
            
            <Frame BackgroundColor="{StaticResource Blue300Accent}">
                <Label Text="{Binding Price}"/>
            </Frame>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
